{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
 
            {
                "label": "python",
                "type": "shell",
                "command": "C:/Program Files (x86)/Microsoft Visual Studio/Shared/Python36_64/python",
                "args": [
                    "${file}"
                ],
                "group": {
                    "kind": "build",
                    "isDefault": true
                }
            }
        ,

        {
            "label": "g++",
            "type": "shell",
            "command": "g++ ${file} -o ${workspaceRoot}/a.exe"
        }
    ]
}